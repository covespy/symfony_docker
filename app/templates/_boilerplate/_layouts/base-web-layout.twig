{# -- Base web layout template that all web requests inherit from -- #}
{% extends "_boilerplate/_layouts/global-variables.twig" %}

{%- block htmlPage -%}
  {#{% minify %}#}
  <!DOCTYPE html>
    {% block htmlTag %}
    <html lang="en">
    {% endblock htmlTag %}
      {% block headTag %}
      <head>
      {% endblock headTag %}
        {% include "_boilerplate/_partials/head-meta.twig" %}
        {# -- Page content that should be included in the <head> -- #}
        {% block headContent %}
        {% endblock headContent %}
      </head>

      {% block bodyTag %}
      <body>
      {% endblock bodyTag %}
        {# -- Page content that should be included in the <body> -- #}
        {% block bodyContent %}
        {% endblock bodyContent %}
      </body>
    </html>
  {#{% endminify %}#}
{%- endblock htmlPage -%}
